# MythosMUD Test Environment Configuration
# This file is for testing - uses test database locations

# Database Configuration for Tests
# Test player database - following test data placement rules
DATABASE_URL=sqlite+aiosqlite:///E:/projects/GitHub/MythosMUD/server/tests/data/players/test_players.db

# NPC Database Configuration for Tests
# Test NPC database - following test data placement rules
NPC_DATABASE_URL=sqlite+aiosqlite:///E:/projects/GitHub/MythosMUD/server/tests/data/npcs/test_npcs.db

# Security Configuration for Tests (using test values)
MYTHOSMUD_SECRET_KEY=test-secret-key-for-testing-only
MYTHOSMUD_JWT_SECRET=test-jwt-secret-for-testing-only
MYTHOSMUD_RESET_TOKEN_SECRET=test-reset-token-secret-for-testing-only
MYTHOSMUD_VERIFICATION_TOKEN_SECRET=test-verification-token-secret-for-testing-only
MYTHOSMUD_ADMIN_PASSWORD=test-admin-password

# Alias Storage Configuration for Tests
# Test aliases directory - following test data placement rules
ALIASES_DIR=E:/projects/GitHub/MythosMUD/server/tests/data/players/aliases

# Development Settings for Tests
DEBUG=true
LOG_LEVEL=DEBUG

# Test-specific Settings
ENVIRONMENT=test
ENABLE_TEST_DATA=true
ENABLE_DEBUG_ENDPOINTS=true

# --- Additional Test Configuration ---
# NATS Configuration for Tests (optional - can be mocked)
NATS_SERVER_PATH=E:/nats-server/nats-server-v2.11.9-windows-amd64/nats-server-v2.11.9-windows-amd64/nats-server.exe
NATS_URL=nats://localhost:4222
NATS_CLUSTER_URL=nats://localhost:6222
NATS_MONITOR_PORT=8222

# --- CORS Configuration for Tests ---
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# --- Rate Limiting for Tests ---
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=60

# --- Session Management for Tests ---
SESSION_TIMEOUT=3600
SESSION_CLEANUP_INTERVAL=300
MAX_SESSIONS_PER_PLAYER=5

# --- Performance Tuning for Tests ---
WORKERS=1
MAX_REQUESTS=1000
TIMEOUT_KEEP_ALIVE=5
TIMEOUT_GRACEFUL_SHUTDOWN=30

# --- Monitoring Configuration for Tests ---
ENABLE_METRICS=false
METRICS_PORT=9090
LOG_FORMAT=json
PERFORMANCE_TRACKING=false

# --- Feature Flags for Tests ---
ENABLE_DUAL_CONNECTIONS=true
ENABLE_SESSION_MANAGEMENT=true
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ERROR_RECOVERY=true
ENABLE_CONNECTION_HEALTH_CHECKS=false
ENABLE_MESSAGE_BATCHING=true
ENABLE_CONNECTION_POOLING=false

# --- Development/Testing Flags ---
ENABLE_MOCK_SERVICES=true
ENABLE_DEVELOPMENT_TOOLS=true
