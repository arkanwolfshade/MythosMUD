{
  "workbench.statusBar.items": {
    "worktree": {
      "alignment": "left",
      "priority": 100
    },
    "git": {
      "alignment": "left",
      "priority": 90
    },
    "python": {
      "alignment": "left",
      "priority": 80
    }
  },
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${appName}",
  "window.titleBarStyle": "custom",
  "files.exclude": {
    "**/.env": true,
    "**/.env.local": false,
    "**/.env.production": true,
    "**/.env.prod": true,
    "**/.env.development": false,
    "**/.env.dev": false,
    "**/.env.unit_test": false,
    "**/.env.example": false,
    "**/test.env.example": false,
    "**/*.env.example": false,
    "**/env.example": false,
    "**/env.production.example": false
  },
  "files.associations": {
    "*.env.example": "properties",
    "test.env.example": "properties",
    ".env.unit_test": "properties",
    ".env.example": "properties",
    "env.example": "properties",
    "env.production.example": "properties"
  },
  "makefile.configureOnOpen": true,
  "editor.fontFamily": "HackNerd, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 12,
  "editor.cursorStyle": "block",
  "editor.wordWrap": "wordWrapColumn",
  "editor.accessibilitySupport": "off",
  "editor.experimentalGpuAcceleration": "on",
  "editor.foldingImportsByDefault": false,
  "editor.guides.bracketPairs": "active",
  "editor.lightbulb.enabled": "onCode",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.smoothScrolling": true,
  "editor.wordWrapColumn": 120,
  "git.alwaysSignOff": true,
  "git.detectSubmodules": true,
  "git.diagnosticsCommitHook.Enabled": true,
  "git.enableCommitSigning": true,
  "git.pruneOnFetch": false,
  "git.pullBeforeCheckout": true,
  "markdownlint.ignore": ["**/investigations/**/*.md", "**/.agent-os/**/*.md", "**/docs/archive/**/*.md"],
  "markdownlint.run": "onSave",
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  }
}
