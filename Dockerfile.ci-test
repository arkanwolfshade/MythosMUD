# Dockerfile for testing CI environment locally
FROM ubuntu:24.04

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3.12 \
    python3.12-venv \
    python3.12-dev \
    curl \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set Python 3.12 as default
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.12 1
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.12 1

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.local/bin:$PATH"

# Set working directory
WORKDIR /workspace

# Copy project files
COPY . .

# Install dependencies
RUN uv venv
RUN . .venv/bin/activate && uv pip install -e .
RUN . .venv/bin/activate && uv pip install -e ".[dev]"

# Install Playwright browsers and dependencies
RUN . .venv/bin/activate && playwright install chromium
RUN . .venv/bin/activate && playwright install-deps

# Set environment variables
ENV DATABASE_URL="sqlite+aiosqlite:///./server/tests/data/players/unit_test_players.db"
ENV MYTHOSMUD_ADMIN_PASSWORD="test-admin-password"
ENV MYTHOSMUD_SECRET_KEY="test-secret-key-for-ci-workflow"
ENV MYTHOSMUD_JWT_SECRET="test-jwt-secret-for-ci-workflow"
ENV MYTHOSMUD_RESET_TOKEN_SECRET="test-reset-token-secret-for-ci-workflow"
ENV MYTHOSMUD_VERIFICATION_TOKEN_SECRET="test-verification-token-secret-for-ci-workflow"

# Initialize test database
RUN . .venv/bin/activate && python server/tests/init_test_db.py

# Verify test database
RUN . .venv/bin/activate && python server/tests/verify_test_db.py

# Default command to run tests
CMD [".venv/bin/python", "-m", "pytest", "server/tests/", "--cov=server", "--cov-report=xml", "--cov-report=html", "--cov-fail-under=70", "-v", "--tb=short"]
