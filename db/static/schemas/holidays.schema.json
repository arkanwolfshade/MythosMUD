{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://mythosmud.org/schemas/holidays.schema.json",
	"title": "Calendar Holidays",
	"type": "object",
	"required": ["holidays"],
	"properties": {
		"holidays": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["id", "name", "tradition", "month", "day", "duration_hours", "season", "bonus_tags"],
				"properties": {
					"id": { "type": "string", "minLength": 1 },
					"name": { "type": "string", "minLength": 1 },
					"tradition": { "type": "string", "minLength": 1 },
					"month": { "type": "integer", "minimum": 1, "maximum": 12 },
					"day": { "type": "integer", "minimum": 1, "maximum": 31 },
					"duration_hours": { "type": "integer", "minimum": 1, "maximum": 168 },
					"season": { "type": "string", "enum": ["winter", "spring", "summer", "autumn"] },
					"bonus_tags": {
						"type": "array",
						"items": { "type": "string", "minLength": 1 },
						"uniqueItems": true
					}
				},
				"additionalProperties": false
			},
			"minItems": 1
		}
	},
	"additionalProperties": false
}
