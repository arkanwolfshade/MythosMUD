{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://mythosmud.org/schemas/room.schema.json",
	"title": "Room",
	"type": "object",
	"required": ["id", "name", "description", "plane", "zone", "sub_zone", "exits"],
	"properties": {
		"id": { "type": "string", "minLength": 1 },
		"name": { "type": "string", "minLength": 1 },
		"description": { "type": "string", "minLength": 1 },
		"plane": { "type": "string", "minLength": 1 },
		"zone": { "type": "string", "minLength": 1 },
		"sub_zone": { "type": "string", "minLength": 1 },
		"environment": { "type": "string" },
		"exits": {
			"type": "object",
			"properties": {
				"north": { "type": ["string", "null"] },
				"south": { "type": ["string", "null"] },
				"east": { "type": ["string", "null"] },
				"west": { "type": ["string", "null"] },
				"northeast": { "type": ["string", "null"] },
				"northwest": { "type": ["string", "null"] },
				"southeast": { "type": ["string", "null"] },
				"southwest": { "type": ["string", "null"] },
				"up": { "type": ["string", "null"] },
				"down": { "type": ["string", "null"] }
			},
			"additionalProperties": { "type": ["string", "null"] }
		},
		"attributes": { "type": "object", "additionalProperties": true }
	},
	"additionalProperties": false
}
