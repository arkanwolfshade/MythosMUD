# MythosMUD Unit Test Configuration
# Copy this to .env.unit_test for unit testing
# DO NOT COMMIT .env.unit_test - Add to .gitignore

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
SERVER_HOST=127.0.0.1
SERVER_PORT=54731

# ============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================================================
# PostgreSQL database for unit tests
# Database: mythos_unit
DATABASE_URL=postgresql+asyncpg://postgres:Cthulhu1@localhost:5432/mythos_unit
DATABASE_NPC_URL=postgresql+asyncpg://postgres:Cthulhu1@localhost:5432/mythos_unit

# ============================================================================
# SECURITY CONFIGURATION (REQUIRED)
# ============================================================================
MYTHOSMUD_ADMIN_PASSWORD=unit_test_admin_password
MYTHOSMUD_INVITE_CODES_FILE=invites.json

# ============================================================================
# ARGON2 PASSWORD HASHING CONFIGURATION (OPTIONAL)
# ============================================================================
# Argon2 parameters for password hashing
# Leave unset to use secure defaults
# ARGON2_TIME_COST=3          # 1-10, higher = more secure but slower
# ARGON2_MEMORY_COST=65536     # 1024-1048576 KiB, higher = more secure
# ARGON2_PARALLELISM=1        # 1-16, 1 recommended for web servers
# ARGON2_HASH_LENGTH=32       # 16-64 bytes, 32 recommended

# ============================================================================
# LOGGING CONFIGURATION (REQUIRED)
# ============================================================================
LOGGING_ENVIRONMENT=unit_test
LOGGING_LEVEL=DEBUG
LOGGING_FORMAT=colored
LOGGING_LOG_BASE=logs
LOGGING_ROTATION_MAX_SIZE=10MB
LOGGING_ROTATION_BACKUP_COUNT=3
LOGGING_COMPRESSION=false
LOGGING_DISABLE_LOGGING=false

# ============================================================================
# NATS CONFIGURATION
# ============================================================================
NATS_ENABLED=true
NATS_URL=nats://localhost:4222
NATS_MAX_PAYLOAD=1048576
NATS_RECONNECT_TIME_WAIT=1
NATS_MAX_RECONNECT_ATTEMPTS=3
NATS_CONNECT_TIMEOUT=5
NATS_PING_INTERVAL=30
NATS_MAX_OUTSTANDING_PINGS=5

# ============================================================================
# GAME CONFIGURATION
# ============================================================================
GAME_DEFAULT_PLAYER_ROOM=earth_arkhamcity_northside_intersection_derby_high
GAME_MAX_CONNECTIONS_PER_PLAYER=3
GAME_RATE_LIMIT_WINDOW=60
GAME_RATE_LIMIT_MAX_REQUESTS=1000
GAME_MAX_COMMAND_LENGTH=1000
GAME_MAX_ALIAS_DEPTH=10
GAME_MAX_ALIAS_LENGTH=500
GAME_MAX_ALIASES_PER_PLAYER=50
GAME_ALIASES_DIR=data/unit_test/players/aliases
GAME_MOTD_FILE=data/motd.html
GAME_DP_REGEN_RATE=1
GAME_COMBAT_TICK_INTERVAL=6
GAME_SERVER_TICK_RATE=0.1
GAME_WEATHER_UPDATE_INTERVAL=300
GAME_SAVE_INTERVAL=60

# ============================================================================
# CHAT CONFIGURATION
# ============================================================================
CHAT_RATE_LIMIT_GLOBAL=100
CHAT_RATE_LIMIT_LOCAL=100
CHAT_RATE_LIMIT_SAY=100
CHAT_RATE_LIMIT_PARTY=100
CHAT_RATE_LIMIT_WHISPER=100
CHAT_CONTENT_FILTERING_ENABLED=false
CHAT_PROFANITY_FILTER=false
CHAT_KEYWORD_DETECTION=false
CHAT_MESSAGE_HISTORY_ENABLED=false
CHAT_MESSAGE_RETENTION_DAYS=1
CHAT_MAX_MESSAGES_PER_CHANNEL=100

# ============================================================================
# DEFAULT PLAYER STATS
# ============================================================================
DEFAULT_STATS_STRENGTH=10
DEFAULT_STATS_DEXTERITY=10
DEFAULT_STATS_CONSTITUTION=10
DEFAULT_STATS_INTELLIGENCE=10
DEFAULT_STATS_WISDOM=10
DEFAULT_STATS_CHARISMA=10
DEFAULT_STATS_MAX_DP=100
DEFAULT_STATS_MAX_LUCIDITY=100
DEFAULT_STATS_DP=100
DEFAULT_STATS_LUCIDITY=100
DEFAULT_STATS_FEAR=0
DEFAULT_STATS_CORRUPTION=0
DEFAULT_STATS_OCCULT_KNOWLEDGE=0

# ============================================================================
# LEGACY COMPATIBILITY
# ============================================================================
SECRET_KEY=unit-test-secret-key
MYTHOSMUD_JWT_SECRET=unit-test-jwt-secret
