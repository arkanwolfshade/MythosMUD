{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.mythosmud.local/calendar/schedule.schema.json",
  "title": "MythosMUD Schedule Collection",
  "type": "object",
  "additionalProperties": false,
  "required": ["schedules"],
  "properties": {
    "schedules": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/scheduleEntry" }
    }
  },
  "$defs": {
    "scheduleEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "category",
        "start_hour",
        "end_hour",
        "days",
        "applies_to"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$",
          "minLength": 3
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "category": {
          "type": "string",
          "minLength": 1
        },
        "start_hour": {
          "type": "integer",
          "minimum": 0,
          "maximum": 23
        },
        "end_hour": {
          "type": "integer",
          "minimum": 1,
          "maximum": 24
        },
        "days": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
          }
        },
        "applies_to": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$"
          }
        },
        "effects": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$"
          }
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
