{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mythosmud.org/schemas/emote_schema.json",
  "title": "Emote Definition Bundle",
  "description": "Schema describing the structure of emote definition files consumed by the EmoteService.",
  "type": "object",
  "required": ["emotes"],
  "additionalProperties": false,
  "properties": {
    "emotes": {
      "type": "object",
      "description": "Mapping of emote names to their message templates and alias metadata.",
      "minProperties": 1,
      "patternProperties": {
        "^[a-z0-9_]+$": {
          "type": "object",
          "required": ["self_message", "other_message"],
          "additionalProperties": false,
          "properties": {
            "self_message": {
              "type": "string",
              "description": "Message displayed to the player using the emote.",
              "minLength": 1,
              "maxLength": 512
            },
            "other_message": {
              "type": "string",
              "description": "Message broadcast to observers. Must include the {player_name} token.",
              "minLength": 1,
              "maxLength": 512,
              "pattern": ".*\\{player_name\\}.*"
            },
            "aliases": {
              "type": "array",
              "description": "Alternate command triggers that map to the same emote.",
              "items": {
                "type": "string",
                "pattern": "^[a-z0-9_]+$",
                "minLength": 1,
                "maxLength": 32
              },
              "uniqueItems": true
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
