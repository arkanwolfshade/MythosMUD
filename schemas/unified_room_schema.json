{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Unified Room Schema",
  "description": "Schema for validating room definitions in the MythosMUD world with unified naming schema support",
  "type": "object",
  "required": ["id", "name", "description", "plane", "zone", "sub_zone", "exits"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Room identifier following unified naming schema patterns"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Human-readable room name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 2000,
      "description": "Room description shown to players"
    },
    "plane": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Plane identifier this room belongs to"
    },
    "zone": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Zone identifier this room belongs to"
    },
    "sub_zone": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Sub-zone identifier this room belongs to"
    },
    "environment": {
      "type": "string",
      "enum": ["indoors", "outdoors", "underwater", "intersection", "street_paved"],
      "default": "outdoors",
      "description": "Environmental classification for this room"
    },
    "exits": {
      "type": "object",
      "description": "Room exits to other locations",
      "properties": {
        "north": {
          "oneOf": [
            {"type": "null"},
            {"type": "string", "pattern": "^[a-z0-9_]+$"},
            {
              "type": "object",
              "required": ["target"],
              "properties": {
                "target": {
                  "type": "string",
                  "pattern": "^[a-z0-9_]+$",
                  "description": "Target room ID"
                },
                "flags": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["one_way", "self_reference", "hidden", "locked"]
                  },
                  "description": "Exit behavior flags"
                },
                "description": {
                  "type": "string",
                  "description": "Custom exit description"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "south": {
          "oneOf": [
            {"type": "null"},
            {"type": "string", "pattern": "^[a-z0-9_]+$"},
            {
              "type": "object",
              "required": ["target"],
              "properties": {
                "target": {
                  "type": "string",
                  "pattern": "^[a-z0-9_]+$",
                  "description": "Target room ID"
                },
                "flags": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["one_way", "self_reference", "hidden", "locked"]
                  },
                  "description": "Exit behavior flags"
                },
                "description": {
                  "type": "string",
                  "description": "Custom exit description"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "east": {
          "oneOf": [
            {"type": "null"},
            {"type": "string", "pattern": "^[a-z0-9_]+$"},
            {
              "type": "object",
              "required": ["target"],
              "properties": {
                "target": {
                  "type": "string",
                  "pattern": "^[a-z0-9_]+$",
                  "description": "Target room ID"
                },
                "flags": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["one_way", "self_reference", "hidden", "locked"]
                  },
                  "description": "Exit behavior flags"
                },
                "description": {
                  "type": "string",
                  "description": "Custom exit description"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "west": {
          "oneOf": [
            {"type": "null"},
            {"type": "string", "pattern": "^[a-z0-9_]+$"},
            {
              "type": "object",
              "required": ["target"],
              "properties": {
                "target": {
                  "type": "string",
                  "pattern": "^[a-z0-9_]+$",
                  "description": "Target room ID"
                },
                "flags": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["one_way", "self_reference", "hidden", "locked"]
                  },
                  "description": "Exit behavior flags"
                },
                "description": {
                  "type": "string",
                  "description": "Custom exit description"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "up": {
          "oneOf": [
            {"type": "null"},
            {"type": "string", "pattern": "^[a-z0-9_]+$"},
            {
              "type": "object",
              "required": ["target"],
              "properties": {
                "target": {
                  "type": "string",
                  "pattern": "^[a-z0-9_]+$",
                  "description": "Target room ID"
                },
                "flags": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["one_way", "self_reference", "hidden", "locked"]
                  },
                  "description": "Exit behavior flags"
                },
                "description": {
                  "type": "string",
                  "description": "Custom exit description"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "down": {
          "oneOf": [
            {"type": "null"},
            {"type": "string", "pattern": "^[a-z0-9_]+$"},
            {
              "type": "object",
              "required": ["target"],
              "properties": {
                "target": {
                  "type": "string",
                  "pattern": "^[a-z0-9_]+$",
                  "description": "Target room ID"
                },
                "flags": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["one_way", "self_reference", "hidden", "locked"]
                  },
                  "description": "Exit behavior flags"
                },
                "description": {
                  "type": "string",
                  "description": "Custom exit description"
                }
              },
              "additionalProperties": false
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "container": {
      "type": "object",
      "description": "Optional environmental container definition for this room",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Whether the container is enabled for this room"
        },
        "capacity_slots": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20,
          "default": 20,
          "description": "Maximum number of inventory slots (1-20)"
        },
        "lock_state": {
          "type": "string",
          "enum": ["unlocked", "locked", "sealed"],
          "default": "unlocked",
          "description": "Current lock state of the container"
        },
        "key_item_id": {
          "type": "string",
          "description": "Optional item ID required to unlock the container"
        },
        "weight_limit": {
          "type": "integer",
          "minimum": 0,
          "description": "Optional maximum weight capacity"
        },
        "allowed_roles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of role names allowed to access container"
        }
      },
      "required": ["enabled"]
    },
    "field1": {
      "description": "Optional field for future extensibility (NPCs, items, effects)"
    },
    "field2": {
      "description": "Optional field for future extensibility (NPCs, items, effects)"
    },
    "field3": {
      "description": "Optional field for future extensibility (NPCs, items, effects)"
    },
    "rest_location": {
      "type": "boolean",
      "default": false,
      "description": "If true, this room is a rest location (inn/hotel/motel) where players can instantly disconnect when not in combat"
    }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "id": {
            "pattern": "^[a-z0-9_]+_room_[a-z0-9_]+_[0-9]{3}$"
          }
        }
      },
      "then": {
        "description": "Regular room validation"
      }
    },
    {
      "if": {
        "properties": {
          "id": {
            "pattern": "^[a-z0-9_]+_intersection_[a-z0-9_]+_[a-z0-9_]+$"
          }
        }
      },
      "then": {
        "description": "Intersection room validation"
      }
    }
  ]
}
