# MythosMUD Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///../../data/players/players.db
TEST_DATABASE_URL=sqlite+aiosqlite:///./tests/data/test_players.db

# Security Configuration - CRITICAL: Change these in production
MYTHOSMUD_SECRET_KEY=your-super-secret-key-here-change-this-in-production
MYTHOSMUD_JWT_SECRET=your-jwt-secret-key-here-change-this-in-production
MYTHOSMUD_RESET_TOKEN_SECRET=your-reset-token-secret-here-change-this-in-production
MYTHOSMUD_VERIFICATION_TOKEN_SECRET=your-verification-token-secret-here-change-this-in-production
MYTHOSMUD_ADMIN_PASSWORD=your-secure-admin-password-here

# Legacy Persistence (for backward compatibility)
MYTHOS_DB_PATH=data/players/players.db

# Logging Configuration
MYTHOS_PERSIST_LOG=./logs/persistence.log
TEST_PERIST_LOG=./tests/logs/test_persistence.log

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Test Environment
# For tests, you can also create a server/tests/test.env file with test-specific values
# The test environment will automatically load from test.env if it exists
