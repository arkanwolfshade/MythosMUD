{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Intersection Schema",
  "description": "Schema for validating intersection room definitions in the MythosMUD world",
  "type": "object",
  "required": ["id", "name", "description", "plane", "zone", "sub_zone", "exits"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+_intersection_[a-z0-9_]+_[a-z0-9_]+$",
      "description": "Intersection identifier following the pattern: {plane}_{zone}_{sub_zone}_intersection_{street_a}_{street_b}"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Human-readable intersection name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 2000,
      "description": "Intersection description shown to players"
    },
    "plane": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Plane identifier this intersection belongs to"
    },
    "zone": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Zone identifier this intersection belongs to"
    },
    "sub_zone": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "description": "Sub-zone identifier this intersection belongs to"
    },
    "environment": {
      "type": "string",
      "enum": ["indoors", "outdoors", "underwater"],
      "default": "outdoors",
      "description": "Environmental classification for this intersection"
    },
    "exits": {
      "type": "object",
      "description": "Intersection exits to other locations",
      "properties": {
        "north": {
          "oneOf": [
            {"type": "null"},
            {"type": "string", "pattern": "^[a-z0-9_]+$"},
            {
              "type": "object",
              "required": ["target"],
              "properties": {
                "target": {
                  "type": "string",
                  "pattern": "^[a-z0-9_]+$",
                  "description": "Target room ID"
                },
                "flags": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["one_way", "self_reference", "hidden", "locked"]
                  },
                  "description": "Exit behavior flags"
                },
                "description": {
                  "type": "string",
                  "description": "Custom exit description"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "south": {
          "oneOf": [
            {"type": "null"},
            {"type": "string", "pattern": "^[a-z0-9_]+$"},
            {
              "type": "object",
              "required": ["target"],
              "properties": {
                "target": {
                  "type": "string",
                  "pattern": "^[a-z0-9_]+$",
                  "description": "Target room ID"
                },
                "flags": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["one_way", "self_reference", "hidden", "locked"]
                  },
                  "description": "Exit behavior flags"
                },
                "description": {
                  "type": "string",
                  "description": "Custom exit description"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "east": {
          "oneOf": [
            {"type": "null"},
            {"type": "string", "pattern": "^[a-z0-9_]+$"},
            {
              "type": "object",
              "required": ["target"],
              "properties": {
                "target": {
                  "type": "string",
                  "pattern": "^[a-z0-9_]+$",
                  "description": "Target room ID"
                },
                "flags": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["one_way", "self_reference", "hidden", "locked"]
                  },
                  "description": "Exit behavior flags"
                },
                "description": {
                  "type": "string",
                  "description": "Custom exit description"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "west": {
          "oneOf": [
            {"type": "null"},
