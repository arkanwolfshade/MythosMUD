            {
              "type": "object",
              "required": ["target"],
              "properties": {
                "target": {
                  "type": "string",
                  "pattern": "^[a-z0-9_]+$",
                  "description": "Target room ID"
                },
                "flags": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["one_way", "self_reference", "hidden", "locked"]
                  },
                  "description": "Exit behavior flags"
                },
                "description": {
                  "type": "string",
                  "description": "Custom exit description"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "up": {
          "oneOf": [
            {"type": "null"},
